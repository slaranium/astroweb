---
import MainLayout from '../layouts/MainLayout.astro';

const services = [
    {
        title: 'Web Development',
        description: 'Building responsive and high-quality web applications using modern technologies like React, Node.js, and more.',
    },
    {
        title: 'Mobile App Development',
        description: 'Creating mobile applications for both iOS and Android platforms with React Native and Flutter.',
    },
    {
        title: 'UI/UX Design',
        description: 'Designing user-friendly interfaces and experiences with a focus on aesthetics and usability.',
    },
    {
        title: 'Consulting',
        description: 'Providing expert advice on technology strategies, software architecture, and project management.',
    },
];
---

<MainLayout title="Services | StringLabs">
    <h1 style="text-align: center; color: #fff; margin-bottom: 50px;">My Services</h1>
    <section style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px; padding: 20px;">
        {services.map(service => (
            <div style="background-color: #222; padding: 20px; border-radius: 10px;">
                <h2 style="color: #0f0;">{service.title}</h2>
                <p style="color: #bbb;">{service.description}</p>
            </div>
        ))}
    </section>
</MainLayout>
