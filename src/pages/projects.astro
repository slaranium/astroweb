    <!-- Section for displaying Our Networks -->
    <section style="text-align: center; padding: 100px 20px; font-family: 'Arial', sans-serif;">
        <h1 style="color: #fff;">Our Networks</h1>
        <div style="display: flex; justify-content: center; gap: 20px; margin-top: 20px; margin-bottom: 50px;"> <!-- Menambahkan margin-bottom: 50px -->
