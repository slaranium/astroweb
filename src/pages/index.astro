---
import Layout from '../layouts/MainLayout.astro';
import IconComply from '../components/IconComply.astro'; // Impor komponen SVG
import IconExplorer from '../components/IconExplorer.astro'; // Impor komponen IconExplorer
import IconGuide  from '../components/IconGuide.astro'; // Impor komponen IconGuide
import IconSecured from '../components/IconSecured.astro'; // Impor komponen IconSecured

const projects = [
    {
        title: 'Dymension',
        image: '/images/dymension.jpg'
    },
    {
        title: 'Chainbase',
        image: 'images/chainbase.jpg'
    },
    {
        title: 'Symphony',
        image: '/images/symphoni.jpg'
    },
    {
        title: 'Dill',
        image: '/images/dill.jpg'
    }
];

const features = [
    {
        title: 'Full Compliance',
        description: 'We strictly observe blockchain governance protocols, actively involved in chain governance, updates, and upgrades to ensure network stability and foster continuous innovation.',
        icon: 'comply' // gunakan penanda untuk SVG
    },
    {
        title: 'Robustly Protected',
        description: 'StringLabs is fortified with round-the-clock monitoring, safeguarding the integrity and security of transactions and stakeholder assets.',
        icon: 'explorer' // Tambahkan penanda untuk ikon Explorer
    },
    {
        title: 'Service Guide',
        description: 'We offer detailed setup documentation and guides to our community, enabling users to navigate and make full use of our platform with confidence.',
        icon: 'guide' // Tambahkan penanda untuk ikon Guide
    },
    {
        title: 'Interchain Explorer',
        description: 'Our swift and dependable Interchain Explorer enables smooth navigation and interaction across blockchain networks, improving accessibility and the overall user experience.',
        icon: 'secure'
    }
];

const networks = [
    { name: 'Symphony', category: 'Mainnet', serviceLink: '#', explorerLink: '#', logo: '/images/symphoni.jpg' },
    { name: 'Dill', category: 'Testnet', serviceLink: '#', explorerLink: '#', logo: '/path/to/devolved-logo.png' },
    { name: 'Chainbase', category: 'Archive', serviceLink: '#', explorerLink: '#', logo: '/path/to/og-labs-logo.png' },
    { name: 'Project X', category: 'Mainnet', serviceLink: '#', explorerLink: '#', logo: '/path/to/project-x-logo.png' },
    { name: 'Project Y', category: 'Testnet', serviceLink: '#', explorerLink: '#', logo: '/path/to/project-y-logo.png' },
    { name: 'Project Z', category: 'Archive', serviceLink: '#', explorerLink: '#', logo: '/path/to/project-z-logo.png' },
    // Tambahan proyek baru
    { name: 'New Project', category: 'Mainnet', serviceLink: '#', explorerLink: '#', logo: '/path/to/new-project-logo.png' }
];
---

<Layout title="Home | StringLabs">
    <!-- Bagian Konten Lama (kolom kiri dan kanan) -->
    <section style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; align-items: center; padding: 100px 20px;">
        <!-- Kolom Kiri -->
        <div style="color: #fff;">
            <h1 style="font-size: 4rem; color: #fff; margin-bottom: 20px;">Hey there! I'm <span style="color: #00FF00;">StringLabs</span></h1>
            <p style="font-size: 1.2rem; margin-bottom: 18px;">is an Independent and Reliable validator.</p>
            <p style="font-style: italic;font-size:  0.8rem; margin-bottom: 16px;">"Dedicated to running reliable and efficient blockchain nodes, contributing to the future of blockchain technology."</p>
        </div>

        <!-- Kolom Kanan -->
        <div style="display: flex; align-items: center; justify-content: center;">
            <img src="/images/stringlogo.png" alt="StringLabs Logo" style="width: 50%; height: auto; object-fit: contain; border-radius: 5px;" />
        </div>
    </section>

    <!-- Konten Baru: What you need to know about Us -->
    <section style="padding: 100px 20px; text-align: center;">
        <h1 style="color: #fff;">What you need to know about Us</h1>
        <div style="display: grid; grid-template-columns: repeat(2, 1fr); column-gap: 60px; row-gap: 30px; margin-top: 50px; padding: 0 30px;">
            {features.map((feature) => (
                <div class="feature-box">
                    {feature.icon === 'comply' && (
                        <IconComply class="feature-icon" />
                    )}
                    {feature.icon === 'secure' && (
                        <IconSecured class="feature-icon" />
                    )}
                    {feature.icon === 'explorer' && (
                        <IconExplorer class="feature-icon" />
                    )}
                    {feature.icon === 'guide' && (
                        <IconGuide class="feature-icon" />
                    )}
                    <h2 style="color: #fff; font-size: 1.5rem; margin-bottom: 10px;">{feature.title}</h2>
                    <p style="color: #fff;">{feature.description}</p>
                </div>
            ))}
        </div>
    </section>

    <!-- Konten: Our Networks -->
    <section style="text-align: center; padding: 100px 20px; font-family: 'Poppins', sans-serif;">
        <h1 style="color: #fff;">Our Networks</h1>
        <div style="display: flex; justify-content: center; gap: 20px; margin-top: 20px; margin-bottom: 50px;">
            <button class="tab-btn active" data-tab="all" style="background-color: #333; color: #fff; padding: 10px 20px; border: none; border-radius: 5px;">
                <i class="fas fa-globe" style="margin-right: 8px;"></i>All
            </button>
            <button class="tab-btn" data-tab="Mainnet" style="background-color: #333; color: #fff; padding: 10px 20px; border: none; border-radius: 5px;">
                <i class="fas fa-link" style="margin-right: 8px;"></i>Mainnet
            </button>
            <button class="tab-btn" data-tab="Testnet" style="background-color: #333; color: #fff; padding: 10px 20px; border: none; border-radius: 5px;">
                <i class="fas fa-flask" style="margin-right: 8px;"></i>Testnet
            </button>
            <button class="tab-btn" data-tab="Archive" style="background-color: #ff0000; color: #fff; padding: 10px 20px; border: none; border-radius: 5px;">
                <i class="fas fa-archive" style="margin-right: 8px;"></i>Archive
            </button>
        </div>

        <section id="networks-container" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; padding: 20px;">
            <!-- Konten akan diupdate dengan JavaScript -->
        </section>

    </section>
    
</Layout>

<script>
document.addEventListener("DOMContentLoaded", function () {
    const tabs = document.querySelectorAll('.tab-btn');
    const networksContainer = document.getElementById('networks-container');

    const networks = [
        { name: 'Symphony', category: 'Testnet', serviceLink: 'https://testnet.ping.pub/symphony/staking/symphonyvaloper1n9eg3xays4s7yf0nxq5ke8l6a0awu5t70daqau', explorerLink: '#', logo: '/images/symphoni.jpg' },
        { name: 'Dill', category: 'Testnet', serviceLink: '#', explorerLink: '#', logo: '/images/dill.jpg' },
        { name: 'Chainbase', category: 'Testnet', serviceLink: 'https://holesky.eigenlayer.xyz/operator/0x28e7d907c050f6347EAc63A48a9B4CD5239Cfe65', explorerLink: '#', logo: 'images/chainbase.jpg' },
        { name: 'Sending Network', category: 'Testnet', serviceLink: '#', explorerLink: '#', logo: 'images/sending.jpg' },
        { name: 'PWR Chain', category: 'Testnet', serviceLink: '#', explorerLink: '#', logo: 'images/pwr.jpg' },
        { name: 'Shardeum', category: 'Testnet', serviceLink: '#', explorerLink: '#', logo: 'images/shardeum.jpg' },
        { name: 'Sonaric', category: 'Testnet', serviceLink: '#', explorerLink: '#', logo: 'images/sonaric.png' },
        { name: 'Dymension', category: 'Archive', serviceLink: '#', explorerLink: '#', logo: 'images/dymension.jpg' },
        { name: 'Over Protocol', category: 'Archive', serviceLink: '#', explorerLink: '#', logo: 'images/over.jpg' },
        { name: 'Stratis EVM', category: 'Archive', serviceLink: '#', explorerLink: '#', logo: 'images/stratis.jpg' },
        { name: 'Dusk', category: 'Mainnet', serviceLink: '#', explorerLink: '#', logo: 'images/dusk.jpg' },
        { name: 'Nubit', category: 'Testnet', serviceLink: '#', explorerLink: '#', logo: 'images/nubit.jpg' },
        { name: 'Avail', category: 'Archive', serviceLink: '#', explorerLink: '#', logo: 'images/avail.png' }
    ];

    const renderNetworks = (category) => {
        networksContainer.innerHTML = '';  // Clear existing content

        const selectedNetworks = category === 'all' ? networks : networks.filter(network => network.category === category);

        selectedNetworks.forEach(network => {
            const networkElement = document.createElement('div');
            networkElement.style.cssText = "background-color: #222; padding: 20px; border-radius: 10px; display: flex; flex-direction: column; align-items: center;";
            
            const logo = document.createElement('img');
            logo.src = network.logo;
            logo.alt = network.name;
            logo.style.cssText = "width: 50px; height: 50px; border-radius: 50%; margin-bottom: 10px;";
            
            const name = document.createElement('h2');
            name.textContent = network.name;
            name.style.color = '#fff';
            
            const serviceLink = document.createElement('a');
            serviceLink.href = network.serviceLink;
            serviceLink.textContent = 'Service';
            serviceLink.style.cssText = "background-color: #333; color: #fff; padding: 10px 20px; border-radius: 5px; text-decoration: none; margin-top: 10px;";
            
            const explorerLink = document.createElement('a');
            explorerLink.href = network.explorerLink;
            explorerLink.textContent = 'Explorer';
            explorerLink.style.cssText = "background-color: #ff0000; color: #fff; padding: 10px 20px; border-radius: 5px; text-decoration: none; margin-top: 10px;";
            
            networkElement.appendChild(logo);
            networkElement.appendChild(name);
            networkElement.appendChild(serviceLink);
            networkElement.appendChild(explorerLink);

            networksContainer.appendChild(networkElement);
        });
    };

    // Initial render
    renderNetworks('all');

    tabs.forEach(tab => {
        tab.addEventListener('click', function () {
            // Remove active class from all tabs
            tabs.forEach(btn => btn.classList.remove('active'));
            
            // Add active class to the clicked tab
            tab.classList.add('active');
            
            // Render the selected category
            const selectedCategory = tab.getAttribute('data-tab');
            renderNetworks(selectedCategory);
        });
    });
});
</script>

<style>
.tab-btn.active {
    background-color: #00FF00 !important;
    color: #000 !important;
}

/* Tambahkan efek hover pada box */
.feature-box {
    background-color: #000;
    padding: 15px;
    border-radius: 15px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
    border: 1px solid #00FF00;
    min-height: 150px;
    width: 100%;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.feature-box:hover {
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(0, 255, 0, 0.5);
}

/* Tambahkan efek hover pada ikon */
.feature-icon path {
    transition: stroke 0.3s ease;
    stroke: #fff; /* Warna awal ikon adalah putih */
}

.feature-box:hover .feature-icon path {
    stroke: #00FF00; /* Warna hijau ketika di-hover */
}
</style>
