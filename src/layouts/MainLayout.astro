---
// MainLayout.astro
export interface Props {
  title?: string;
}

const { title = 'Portfolio' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Tambahkan Font Awesome di sini -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>{title}</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');
        
        .nav-link {
            color: #fff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #0f0;
        }

        .nav-link.active {
            color: #0f0;
        }

        .footer-link {
            color: #fff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-link:hover {
            color: #0f0;
        }
    </style>
</head>
<body style="background-color: #111; color: #fff; font-family: 'Poppins', sans-serif;">
    <header style="padding: 20px;">
        <nav style="display: flex; justify-content: center; gap: 20px;">
            <a href="/" class={`nav-link ${currentPath === '/' ? 'active' : ''}`}>Home</a>
            <a href="/projects" class={`nav-link ${currentPath === '/projects' ? 'active' : ''}`}>Projects</a>
            <!-- Ubah href untuk menu Service -->
            <a href="https://docs.stringlabs.xyz" target="_blank" class="nav-link">Service</a>
            <a href="/about" class={`nav-link ${currentPath === '/about' ? 'active' : ''}`}>About</a>
        </nav>
    </header>
    <main style="padding: 0 20px; margin: 0 90px;">
        <slot />
    </main>
    <footer style="margin-top: 50px; padding: 20px 60px; background-color: #000;">
        <div style="display: flex; justify-content: space-between; align-items: center; color: #888; font-size: 14px;">
            <span>Built with Astro &copy; 2024 StringLabs</span>
            <div style="display: flex; gap: 20px;">
                <a href="https://github.com/slaranium/" class="footer-link">Github</a>
                <a href="https://t.me/slarahimura" class="footer-link">Telegram</a>
                <a href="https://twitter.com/slaranium" class="footer-link">Twitter</a>
                <a href="https://www.linkedin.com/in/slaranium/" class="footer-link">LinkedIn</a>
            </div>
        </div>
    </footer>
</body>
</html>
